WindowManager:
    MainScreen:
    MenuScreen:

<MainScreen>:
    name: 'main'
    FloatLayout:
        Image:
            id: background
            anim_delay: 0.00
            size: (800, 640)
            pos: (0, 0)
        Button:
            id: menu
            text: "Menu"
            font_size: 40
            size_hint: (0.2, 0.2)
            pos: (800 * 0.8, 640 * 0.8)
            background_color: (0.5, 0.5, 0.5, 0.25)
            on_press:
                root.stop()
                root.manager.transition.direction = 'left'
                root.manager.current = 'menu'
                root.manager.get_screen('menu').start()
        Label:
            id: fps
            text: "0"
            size_hint: (0.1, 0.1)
            pos: (0, 576)

<MenuScreen>:
    name: 'menu'
    FloatLayout:
        Image:
            id: background
            anim_delay: 0.00
            pos: (-64, 80)
            size: (720, 576)

        Image:
            id: hist
            pos: (-64, 80)
            size: (720, 576)

        Button:
            id: menu
            text: "Return"
            font_size: 30
            size_hint: (0.2, 0.18)
            pos: (0, 0)
            background_color: (0.5, 0.5, 0.5, 0.25)
            halign: 'center'
            valign: 'middle'
            on_press:
                root.stop()
                root.manager.transition.direction = 'right'
                root.manager.current = 'main'
                root.manager.get_screen('main').start()

        Button:
            id: invert
            text: "Invert\nColors"
            font_size: 30
            size_hint: (0.2, 0.18)
            pos: (320, 0)
            background_color: (0.5, 0.5, 0.5, 0.25)
            halign: 'center'
            valign: 'middle'
            on_press:
                root.invert()
                root.manager.get_screen('main').invert()

        Button:
            id: wbactivate
            text: "White\nBalance"
            font_size: 30
            size_hint: (0.2, 0.18)
            pos: (640, 0)
            background_color: (0.5, 0.5, 0.5, 0.25)
            halign: 'center'
            valign: 'middle'
            on_press:
                root.activateWB()
                root.manager.get_screen('main').activateWB()

        Slider:
            id: exposureSlider
            min: -24
            max: 24
            step: 1/6
            value: 0
            orientation: 'vertical'
            pos: (700, 130)
            size_hint: (0.1, 0.7)

        Label:
            id: exposureLabel:
            text: "Exposure\nComp"
            font_size: 24
            pos: (665, 540)
            size_hint: (0.2, 0.2)
            halign: 'center'
            valign: 'middle'

