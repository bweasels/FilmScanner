WindowManager:
    MainScreen:
    MenuScreen:

<MainScreen>:
    name: 'main'
    FloatLayout:
        Image:
            id: background
            anim_delay: 0.00
            size: (800, 640)
            pos: (0, 0)
        Button:
            id: menu
            text: "Menu"
            font_size: 40
            size_hint: (0.2, 0.2)
            pos: (800 * 0.8, 640 * 0.8)
            background_color: (0.5, 0.5, 0.5, 0.25)
            on_press:
                root.stop()
                root.manager.transition.direction = 'left'
                root.manager.current = 'menu'
                root.manager.get_screen('menu').start()

<MenuScreen>:
    name: 'menu'
    FloatLayout:
        Image:
            id: background
            anim_delay: 0.00
            pos: (-64, 80)
        Image:
            id: hist
            pos: (0, 0)
            size: (720, 576)
        Button:
            id: menu
            text: "return"
            font_size: 40
            size_hint: (0.2, 0.2)
            pos: (0, 640*0.8)
            background_color: (0.5, 0.5, 0.5, 0.25)
            on_press:
                root.stop()
                root.manager.transition.direction = 'right'
                root.manager.current = 'main'
                root.manager.get_screen('main').start()



